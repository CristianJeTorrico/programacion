#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void Ordenarvector(int N[],int T);
void Cargarvector(int N[],int T);
void Mostrarvector(int N[],int T);

void  main()
{
	int N[MAX],T,V;
	do{
	cout<<"ingresar el tamaÃ±o del vector: ";
	cin>>V;
	}while((V<0) || (V>MAX));
	
	Cargarvector(N,V);
	Ordenarvector(N,V);
	Mostrarvector(N,V);
	getch();

}

void Cargarvector(int N[],int T)
{
	for(int i=0;i<T;i++)
	{
		cout<<"ingrese el vector: ";
		cin>>N[i];
	}
}

void Mostrarvector(int N[],int T)
{
	for(int i=0;i<T;i++)
		cout<<N[i]<<"\n";
}

void Ordenarvector(int N[],int T)
{
	float aux;
	for(int i=0;i<T;i++)
	{
		for(int p=i+1;p<T;p++)
			if(N[i]>N[p])
			{aux=N[p];
		N[p]=N[i];
		N[i]=aux;
		}
	}
}
